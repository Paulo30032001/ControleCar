@model ControleCar.Models.ViewModels.pecasFormViewModel;
@{
    ViewData["Title"] = "Editar Peça";
}


<hr />
<div class="row">
    <div class="col-md-4">
        <form  asp-action="edit">

            <div class="form-group">
                <label asp-for="pecas.nome" class="control-label"></label>
                <input required asp-for="pecas.nome" class="form-control" />

            </div>
            <div class="form-group">
                <label asp-for="pecas.valor" class="control-label"></label>
                <input required  type="number" asp-for="pecas.valor" class="form-control" />

            </div>

             <div class="form-group">
                <label asp-for="pecas.valor" class="control-label"></label>
               <select required asp-for="pecas.id_departamento" asp-items="@(new SelectList(Model.departamentos,"id","nome"))"
               class="form-select">
           <option value="">Selecione...</option>
           
           </select>

            </div>



            <div class="form-group">
                <input type="hidden" asp-for="pecas.id">
                
                <input type="submit" value="Editar" class=" mt-3 btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Voltar</a>
</div>


