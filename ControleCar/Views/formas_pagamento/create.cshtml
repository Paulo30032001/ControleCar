@model formas_pagamento;
@{
    ViewData["Title"] = "Crias Forma de Pagamento";
}




<h1>@ViewData["Title"]</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form id="form" asp-action="create">

            <div class="form-group">
                <label asp-for="forma_pag" class="control-label"></label>
                <input required asp-for="forma_pag" class="form-control" />

            </div>
           

            <div class="form-group">
                <input type="submit" value="Create" class=" mt-3 btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Voltar</a>
</div>
