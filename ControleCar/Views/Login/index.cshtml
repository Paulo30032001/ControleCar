@model login;
@{
    ViewData["Title"] = "Sgbd para Auto Peças";
    Layout = "_Layout2";
}


<div class="container-tight mt-5">
    <div class="text-center mb-4">
        <a href="dashboard.html" class="navbar-brand navbar-brand-autodark"><img src="./static/logo.png" height="80" alt=""></a>
    </div>
    <form class="card card-sm back" asp-action="index" >
        <div class="card-body">
            <h2 class="card-title text-center mb-4">Bem-vindo ao Sistema Gerenciador De Auto Peças</h2>
            <div class="mb-3">
                <label class="form-label">E-mail</label>
                <input asp-for="email" required type="email" class="form-control" placeholder="Digite seu e-mail">
            </div>
            <div class="mb-2">
                <label class="form-label">
                    Senha
                    <span class="form-label-description text-right" style="position:absolute;right:0px;">
                        <a href="#" class="text-danger text-right">Esqueci a senha</a>
                    </span>
                </label>
                <div class="input-group input-group-flat">
                    <input required asp-for="senha"  type="password" class="form-control" placeholder="Senha" autocomplete="off">
                    <span class="input-group-text">
                        <a href="#" class="link-secondary" title="Mostrar Senha" data-bs-toggle="tooltip">
                            <!-- Download SVG icon from http://tabler-icons.io/i/eye -->
                            <svg xmlns="http://www.w3.org/2000/svg" class="icon" width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round"><path stroke="none" d="M0 0h24v24H0z" fill="none" /><circle cx="12" cy="12" r="2" /><path d="M22 12c-2.667 4.667 -6 7 -10 7s-7.333 -2.333 -10 -7c2.667 -4.667 6 -7 10 -7s7.333 2.333 10 7" /></svg>
                        </a>
                    </span>
                </div>
            </div>
       
            <div class="form-footer">
            <!-- <input type="submit" class="btn btn-success w-100" value="Entrar"> -->
          <input type="submit" class="btn btn-success w-100" value="Entrar" />
              <h2 class="text text-danger">@ViewData["Message"]</h2>
            </div>
        </div>
    </form>
</div>